<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mallImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toStartOf="@id/toWebsiteCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/toWebsiteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/mallImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mallImage"
        app:layout_constraintTop_toTopOf="@id/mallImage">

        <TextView
            android:id="@+id/toWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7CD9D1"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="무신사에서\n짧은 원피스 확인해보기 >"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>